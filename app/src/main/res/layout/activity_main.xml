<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt4"
        android:text="4"
        android:background="#9C27B0"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt3"
        android:text="3"
        android:background="#B5E47D"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/txt4"
        android:layout_toLeftOf="@id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt2"
        android:text="2"
        android:background="#3F51B5"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/txt3"
        android:layout_toLeftOf="@id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt1"
        android:text="1"
        android:background="#F44336"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/txt2"
        android:layout_toLeftOf="@id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt5"
        android:text="5"
        android:background="#8F8887"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/txt4"
        android:layout_toLeftOf="@id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt6"
        android:text="6"
        android:background="#5C6155"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/txt5"
        android:layout_toLeftOf="@id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt7"
        android:text="7"
        android:background="#4CAF50"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/txt6"
        android:layout_toLeftOf="@id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>